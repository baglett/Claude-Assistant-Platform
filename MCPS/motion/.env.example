# =============================================================================
# Motion MCP Server - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Motion API Configuration (REQUIRED)
# -----------------------------------------------------------------------------

# Your Motion API key from https://app.usemotion.com/web/settings/api
MOTION_API_KEY=your-api-key-here

# -----------------------------------------------------------------------------
# Rate Limiting Configuration
# -----------------------------------------------------------------------------

# Account type determines default rate limit:
#   - individual: 12 requests per minute (default)
#   - team: 120 requests per minute
#   - enterprise: custom limit (set MOTION_RATE_LIMIT_OVERRIDE)
MOTION_ACCOUNT_TYPE=individual

# Override the default rate limit (0 = use default based on account type)
# WARNING: Setting this higher than your account allows WILL get your account banned!
MOTION_RATE_LIMIT_OVERRIDE=0

# Rate limit window in seconds (default: 60)
MOTION_RATE_LIMIT_WINDOW=60

# Path to SQLite database for rate limit persistence
# This allows rate limits to survive server restarts
MOTION_RATE_LIMIT_DB=motion_rate_limit.db

# -----------------------------------------------------------------------------
# Motion API Settings
# -----------------------------------------------------------------------------

# Base URL for Motion API (don't change unless you know what you're doing)
MOTION_API_BASE_URL=https://api.usemotion.com/v1

# Request timeout in seconds
MOTION_REQUEST_TIMEOUT=30

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# Host address for the server
HOST=0.0.0.0

# Port number for the server
PORT=8081

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
