# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for all text files
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.sql text eol=lf
*.sh text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.css text eol=lf
*.html text eol=lf

# Dockerfile and docker-compose
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Jenkins
Jenkinsfile text eol=lf

# Git config files
.gitattributes text eol=lf
.gitignore text eol=lf

# Lock files
uv.lock text eol=lf
package-lock.json text eol=lf

# Keep Windows batch files with CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
